{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci --prefer-offline",
  "devCommand": "npm run dev",
  "env": {
    "TMDB_API_KEY": "@tmdb-api-key",
    "NEXTAUTH_SECRET": "@nextauth-secret"
  },
  "functions": {
    "pages/api/**/*.ts": {
      "memory": 512
    }
  },
  "regions": ["fra1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}